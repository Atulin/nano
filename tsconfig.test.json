{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "",
    "rootDir": "",

    "jsx": "react",
    "jsxFactory": "Nano.h",

    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,

    "alwaysStrict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["test/nodejs/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "test/deno/**", "test/browser/**"]
}
