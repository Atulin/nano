{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "lib": ["DOM", "ES2015"],
    "jsx": "react",
    "jsxFactory": "Nano.h",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./lib/cjs",
    "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": false,
    "typeRoots": [],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true /* Disallow inconsistently-cased references to the same file. */
  },
  "include": ["src/**/*"]
}
